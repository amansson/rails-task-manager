<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<span>Completed? </span>
<input type="checkbox" <%= 'checked' if @task.completed? %>>
<br>
<br>
<%= link_to 'Edit', task_edit_path(@task) %> |
<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %> |

<%= link_to 'Back', tasks_path %>